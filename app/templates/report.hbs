<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">{{description}}</h3>
  </div>

  <div class="panel-body">
    <form>
      <div class="form-group">
        <div class='input-group date date-from'>
          <input type='text' class="form-control" />
            <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>

      <div class="form-group">
        <div class='input-group date date-to'>
          <input type='text' class="form-control" />
            <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>

      <div class="progress">
        <div class="progress-bar" role="progressbar" {{bind-attr aria-valuenow=controller.progress}} aria-valuemin="0" aria-valuemax="100" {{bind-attr style=view.progressStyle}}>
          <span class="sr-only">{{controller.progress}}% Complete</span>
        </div>
      </div>

      <button type="submit" class="btn btn-default btn-block report-go">GO!</button>

      <button type="button" class="btn btn-default btn-block report-view">View</button>
    </form>
  </div>
</div>
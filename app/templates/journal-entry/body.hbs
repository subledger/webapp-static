{{#if collapsed}}
  {{format-date effectiveAt 'full'}}

{{else}}
  <div class="row">
    <div class="col-xs-3 col-md-2">
      <span class="time-ago">{{view.timeAgoFromNow}}</span>
    </div>
    <div class="col-xs-6 col-md-9">
      {{description}}
    </div>
    <div class="col-xs-3 col-md-1 text-right">
      {{state}}
    </div>
  </div>
{{/if}}
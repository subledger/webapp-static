<form role="form" class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-3 col-md-2 col-lg-2 control-label">Key:</label>
    <div class="col-sm-9 col-md-10 col-lg-10">
      <p class="form-control-static">{{key}}</p>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-3 col-md-2 col-lg-2 control-label">Secret:</label>
    <div class="col-sm-9 col-md-10 col-lg-10">
      <p class="form-control-static">{{secret}}</p>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-3 col-md-2 col-lg-2 control-label">Org:</label>
    <div class="col-sm-9 col-md-10 col-lg-10">
      <p class="form-control-static">{{org}}</p>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-3 col-md-2 col-lg-2 control-label">Decimal Places ({{decimalPlaces}}):</label>
    <div class="col-sm-9 col-md-10 col-lg-10">
      <p class="form-control-static">
        <div class="decimal-places">
          {{input value=decimalPlaces type="text"}}
        </div>
      </p>        
    </div>
  </div>
</form>

{{#if lines}}
    <article data-id="{{id}}" data-book-id="{{book_id}}">
        <form action="#" class="model2">
            <header class="header clearfix action" data-action="close">
                <div class="left padding-top-half">
                    <strong>{{desc}}</strong> <span class="icon star-{{favorite}} action" data-action="addToFavorite">Add to Favorite</span>
                </div>
                <div class="right">

                     <a href="#" class="icon chart action" data-action="chart" data-account-id="{{id}}" data-journal-id="{{journalid}}"><span class="caption">Chart page</span></a>

                </div>
            </header>
            <section class="body">
                <table cellpadding="0" cellspacing="0" border="0" class="account">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Description</th>
                            <th class="number">Debit</th>
                            <th class="number">Credit</th>
                            <th class="number">Balance</th>
                        </tr>
                    </thead>
                    <tbody>

                             <tr>
                                <td><strong>Total</strong></td>
                                <td></td>
                                <td class="number total">{{formatAmount account balancetotal.debit_value}}</td>
                                <td class="number total">{{formatAmount account balancetotal.credit_value}}</td>
                                <td class="number total">{{formatBalance account balancetotal.value}}</td>
                            </tr>
                            {{#each lines}}
                               <tr data-journal-id="{{journal_entry}}" data-line-id="{{id}}">
                                   <td>{{date}}</td>
                                   <td><a href="{{reference}}" target="_blank">{{description}}</a></td>
                                   <td class="number">{{#ifCond value.type "debit"}}<a href="#" class="action" data-action="source">{{formatAmount ../../account value}}</a>{{/ifCond}}</td>
                                   <td class="number">{{#ifCond value.type "credit"}}<a href="#" class="action" data-action="source">{{formatAmount ../../account value}}</a>{{/ifCond}}</td>
                                   <td class="number">{{formatBalance ../../account balance.value}}</td>
                               </tr>
                            {{/each}}

                    </tbody>
                    {{#if more}}
                        <tfoot>
                           <tr data-journal-id="{{journal_entry}}">
                               <td colspan="5" class="morelines"><a href="#" class="action" data-action="moreaccountlines" data-id="{{account.id}}">Get More lines</a></td>
                           </tr>
                        </tfoot>
                    {{/if}}

                </table>
            </section>
        </form>
    </article>
{{else}}
    <article data-id="{{id}}" data-book-id="{{book_id}}">
        <a class="model1 action" data-action="close">
            No Activity yet!
        </a>
    </article>
{{/if}}

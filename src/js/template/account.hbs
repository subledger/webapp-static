<article>
    <form action="#" class="model2">
        <header class="header clearfix">
            <div class="left padding-top-half">
            	<strong>{{desc}}</strong>
            </div>
            <div class="right">
                <a href="account.html" class="icon account margin-right"><span class="caption">Chart page</span></a>
                <a href="chart.html" class="icon chart"><span class="caption">Chart page</span></a>

            </div>
        </header>
        <section class="body">
            <table cellpadding="0" cellspacing="0" border="0" class="account">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Debit</th>
                        <th>Credit</th>
                        <th>Balance</th>
                    </tr>
                </thead>
                <tbody>

                     {{#if lines}}
                        {{#each lines}}
                           <tr>
                               <td>{{date}}</td>
                               <td><a href="{{reference}}" target="_blank">{{description}}</a></td>
                               <td>{{#ifCond value.type "debit"}}<a href="#">{{value.amount}}</a>{{/ifCond}}</td>
                               <td>{{#ifCond value.type "credit"}}<a href="#">{{value.amount}}</a>{{/ifCond}}</td>
                               <td>{{value.amount}}</td>
                           </tr>
                        {{/each}}
                    {{else}}
                        No lines!
                    {{/if}}

                </tbody>

            </table>
        </section>
    </form>
</article>

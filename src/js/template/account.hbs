
{{#if lines}}
    <article data-id="{{id}}" data-book-id="{{book_id}}">
        <form action="#" class="model2">
            <header class="header clearfix action" data-action="close">
                <div class="left padding-top-half">
                    <strong>{{desc}}</strong>
                </div>
                <div class="right">
                    <a href="chart.html" class="icon chart"><span class="caption">Chart page</span></a>

                </div>
            </header>
            <section class="body">
                <table cellpadding="0" cellspacing="0" border="0" class="account">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Debit</th>
                            <th>Credit</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <tbody>


                            {{#each lines}}
                               <tr>
                                   <td>{{date}}</td>
                                   <td><a href="{{reference}}" target="_blank">{{description}}</a></td>
                                   <td>{{#ifCond value.type "debit"}}<a href="#">{{value.amount}}</a>{{/ifCond}}</td>
                                   <td>{{#ifCond value.type "credit"}}<a href="#">{{value.amount}}</a>{{/ifCond}}</td>
                                   <td>{{value.amount}}</td>
                               </tr>
                            {{/each}}

                    </tbody>

                </table>
            </section>
        </form>
    </article>
{{else}}
    <article data-id="{{id}}" data-book-id="{{book_id}}">
        <a class="model1 action" data-action="close">
            No Activity yet!
        </a>
    </article>
{{/if}}
